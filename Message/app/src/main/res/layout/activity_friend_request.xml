<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FriendRequest"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/friendrequest_navigation_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/Blue_2"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="20dp">

        <ImageButton
            android:id="@+id/friendrequest_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/chatroom_back_btn"
            android:contentDescription="Go back"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friend Request"
            android:textSize="25sp"
            android:textColor="@color/Blue_0"
            android:textStyle="bold"
            android:layout_toEndOf="@id/friendrequest_back_btn"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friendrequest_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
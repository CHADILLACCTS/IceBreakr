<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        >

        <ImageView
            android:id="@+id/chat_item_home_profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/push_in_boots"
            android:layout_alignParentStart="true"

            />

        <TextView
            android:id="@+id/chat_item_home_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="User name"
            android:textSize="20sp"
            android:layout_toRightOf="@id/chat_item_home_profile_pic"
            />

        <TextView
            android:id="@+id/chat_item_home_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="Last message sent in chat room"
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/chat_item_home_profile_pic"
            android:layout_below="@id/chat_item_home_name"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chatroom_text_box_bg_gray"
        android:layout_marginHorizontal="30dp"
        />


</LinearLayout>

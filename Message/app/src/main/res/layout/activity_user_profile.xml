<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/chatroom_layout_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/Blue_2"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="20dp"
        >
        <ImageButton
            android:id="@+id/userprofile_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/chatroom_back_btn"
            android:contentDescription="Go back"
            />


        <TextView
            android:id="@+id/chatroom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/userprofile_back_btn"
            android:text="User Profile"
            android:textSize="25sp"
            android:textColor="@color/Blue_0"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/userprofile_profile_pic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icondefault"
            android:layout_centerHorizontal="true"/>

        <Button
            android:id="@+id/userprofile_change_profile_pic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Profile Picture"
            android:paddingVertical="20dp"
            android:layout_marginVertical="20dp"
            android:backgroundTint="@color/Blue_2"
            android:textColor="@color/Blue_0"
            android:layout_below="@+id/userprofile_profile_pic"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="50dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="Name:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/box_outline">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:src="@drawable/user_profile_name"/>
            <TextView
                android:id="@+id/userprofile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="John Smith"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Email:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/box_outline">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:src="@drawable/user_profile_email"/>

            <TextView
                android:id="@+id/userprofile_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="john.smith@email.com" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/userprofile_change_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:text="Change Password"
            android:backgroundTint="@color/gray_dark"
            android:textColor="@color/Blue_0"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</LinearLayout>
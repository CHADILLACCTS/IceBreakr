<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePassword"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/Blue_2"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="20dp">
        <ImageButton
            android:id="@+id/change_password_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/chatroom_back_btn"
            android:contentDescription="Go back"
            />


        <TextView
            android:id="@+id/chatroom_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/change_password_back_btn"
            android:text="Change Password"
            android:textSize="25sp"
            android:textColor="@color/Blue_0"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Current Password:"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/change_password_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColorHint="@color/gray_medium"
            android:background="@color/gray_light"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="New Password:"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/change_password_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:textColorHint="@color/gray_medium"
            android:background="@color/gray_light"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="Repeat New Password:"
            android:layout_marginVertical="10dp"/>

        <EditText
            android:id="@+id/change_password_new_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:textColorHint="@color/gray_medium"
            android:background="@color/gray_light"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/userprofile_change_password_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password"
        android:paddingVertical="20dp"
        android:backgroundTint="@color/gray_dark"
        android:textColor="@color/Blue_0"
        android:layout_alignParentBottom="true"/>


</LinearLayout>

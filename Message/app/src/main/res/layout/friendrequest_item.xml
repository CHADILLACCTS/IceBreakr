<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="30dp"
        >

        <ImageView
            android:id="@+id/friend_request_item_profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/push_in_boots"
            android:layout_alignParentStart="true"

            />

        <TextView
            android:id="@+id/friend_request_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:text="User name"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_toRightOf="@id/friend_request_item_profile_pic"
            />


        <ImageButton
            android:id="@+id/friend_request_item_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/friend_request_accept"
            android:layout_toLeftOf="@id/friend_request_item_decline_btn"
            android:layout_marginHorizontal="20dp"
            android:layout_centerVertical="true"/>

        <ImageButton
            android:id="@+id/friend_request_item_decline_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/friend_request_decline"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/chatroom_text_box_bg_gray"
        android:layout_marginHorizontal="30dp"
        />


</LinearLayout>

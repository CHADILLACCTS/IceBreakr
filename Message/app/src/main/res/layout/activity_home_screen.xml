<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blue_0"
    tools:context=".HomeScreen"
    android:orientation="vertical"
    android:layout_marginVertical="100dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Homescreen_IceBreakr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:text="@string/ice_breakr"
            android:textColor="@color/Blue_2"
            android:textSize="70sp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/Homescreen_welcome_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="Welcome back, John Smith!"
            android:textColor="@color/gray_medium"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp">

        <Button
            android:id="@+id/Homescreen_userprofile_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/Blue_2"
            android:text="@string/user_profile"
            android:textSize="17sp"
            android:textColor="@color/Blue_0"
            android:layout_above="@+id/Homescreen_chat_btn" />


        <Button
            android:id="@+id/Homescreen_chat_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="@color/Blue_2"
            android:text="@string/chat"
            android:textSize="17sp"
            android:textColor="@color/Blue_0"
            android:layout_above="@id/Homescreen_logout_btn"/>

        <Button
            android:id="@+id/Homescreen_logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="@color/Blue_2"
            android:text="@string/logout"
            android:textSize="17sp"
            android:textColor="@color/Blue_0"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>





</LinearLayout>